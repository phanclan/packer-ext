{
  "description": "Basic packer file for building an image for Vault, Consul, Nomad",
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_region": "us-west-2",
    "prefix": "pphan",
    "TERRAFORM_VERSION": "0.12.17",
    "VAULT_VERSION": "1.3.0",
    "CONSUL_VERSION": "1.6.2",
    "NOMAD_VERSION": "0.10.2",
    "CONSUL_TEMPLATE_VERSION": "0.23.0",
    "ENVCONSUL_VERSION": "0.9.1"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "instance_type": "t3.large",
      "ssh_username": "ubuntu",
      "ami_name": "pphan {{timestamp}}",
      "tags": {
        "Name": "pphan {{timestamp}}",
        "Env": "demo"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "welcome.txt",
      "destination": "/home/ubuntu/"
    },
    {
      "type": "shell",
      "inline": ["ls -al /home/ubuntu", "cat /home/ubuntu/welcome.txt"]
    },
    {
      "type": "shell",
      "scripts": [
        "install.sh",
        "post_install.sh"
      ]
    }
  ]
}
